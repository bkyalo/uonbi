{{!
    @template block_myoverview/view-summary

    This template renders the list view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "summary": "This course is about assignments",
                "hasprogress": true,
                "progress": 10
            }
        ]
    }
}}
<div role="list">
{{#courses}}
    <div class="course-summaryitem pt-4" role="listitem"
        data-region="course-content"
        data-course-id="{{{id}}}" data-overview-course-id="{{{id}}}">
        <div class="row align-items-center">
            <div class="col-md-7 d-flex align-items-center">
                <a href="{{viewurl}}" class="courseimage">
                    <div class="rounded summary-image " style="background-image: url({{{courseimage}}});"></div>
                </a>
                <div class="course-info-container">
                    {{#showcoursecategory}}
                    <div class="text-muted muted d-flex flex-wrap">
                        <span class="sr-only">
                            {{#str}}aria:coursecategory, core_course{{/str}}
                        </span>
                        <span class="categoryname">
                            {{{coursecategory}}}
                        </span>
                    </div>
                    {{/showcoursecategory}}
                    {{^visible}}
                        <div class="d-flex flex-wrap">
                            <span class="badge badge-info my-1">{{#str}} hiddenfromstudents {{/str}}</span>
                        </div>
                    {{/visible}}
                    {{#showshortname}}
                        <div class="text-muted muted d-flex flex-wrap">
                            {{#showcoursecategory}}
                                <div class="pl-1 pr-1">|</div>
                            {{/showcoursecategory}}
                            <span class="sr-only">
                                {{#str}}aria:courseshortname, core_course{{/str}}
                            </span>
                            <div>{{{shortname}}}</div>
                        </div>
                    {{/showshortname}}
                    <a href="{{viewurl}}" class="aalink coursename">
                        {{> core_course/favouriteicon }}
                        <span class="sr-only">
                            {{#str}}aria:coursename, core_course{{/str}}
                        </span>
                        {{{fullname}}}
                    </a>
                    <div class="pt-0">
                        {{#hasprogress}}
                            {{> block_myoverview/progress-bar}}
                        {{/hasprogress}}
                    </div>
                </div>
            </div>
            <div class="col-md-4 summary-icons"></div>
            <div class="col-md-1 d-flex course-action-menu">
                {{> block_myoverview/course-action-menu }}
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12 summary">
                <span class="sr-only">{{#str}}aria:coursesummary, block_myoverview{{/str}}</span>
                <div id="course-summary-{{{id}}}">
                    {{{summary}}}
                </div>
            </div>
        </div>
    </div>
{{/courses}}
</div>

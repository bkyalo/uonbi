{{!
    Page header.
}}
<header id="page-header" class="row py-4">
    <div class="col-12">
        <div class="d-flex flex-wrap">
            {{#hasnavbar}}
            <div id="page-navbar">
                {{{navbar}}}
            </div>
            {{/hasnavbar}}
            <div class="ml-auto d-flex">
                {{{pageheadingbutton}}}
            </div>
            <div id="course-header">
                {{{courseheader}}}
            </div>
        </div>
        <div class="d-flex">
            <div class="mr-auto">
            {{{contextheader}}}
            </div>
            <div class="ml-auto">
                {{#headeractions}}
                    <div class="d-flex">{{{.}}}</div>
                {{/headeractions}}
            </div>
            {{#editbutton}}
            <div class="editbutton">
                {{{editbutton}}}
            </div>
            {{/editbutton}}

            {{#settingsmenu}}
            <div class="context-header-settings-menu">
                {{{settingsmenu}}}
            </div>
            {{/settingsmenu}}
        </div>
    </div>
</header>

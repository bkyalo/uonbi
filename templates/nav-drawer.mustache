{{!
    @template theme_uonbi/nav-drawer

    Nav drawer template

    Example context (json): {}
}}
<style>
/* Navigation drawer width */
#nav-drawer {
    width: 300px !important; /* Increased from default */
}

/* Force navigation icons size */
#nav-drawer .media-left {
    width: 2.5rem !important; /* Increased from 2rem */
    min-width: 2.5rem !important; /* Increased from 2rem */
    text-align: center;
    margin-right: 1rem !important; /* Increased from 0.75rem */
}
#nav-drawer .media-left img {
    width: 2rem !important; /* Increased from 1.5rem */
    height: 2rem !important; /* Increased from 1.5rem */
    max-width: 2rem !important; /* Increased from 1.5rem */
    max-height: 2rem !important; /* Increased from 1.5rem */
    filter: brightness(0) saturate(100%) invert(58%) sepia(8%) saturate(294%) hue-rotate(169deg) brightness(89%) contrast(89%);
    opacity: 0.8;
    transition: all 0.2s ease;
}
#nav-drawer .media-body {
    font-size: 1rem !important; /* Slightly larger text */
    font-weight: 500;
    transition: all 0.2s ease;
    white-space: nowrap; /* Prevent text wrapping */
    overflow: hidden;
    text-overflow: ellipsis;
}
#nav-drawer .list-group-item:hover .media-left img,
#nav-drawer .list-group-item.active .media-left img {
    opacity: 1 !important;
    filter: brightness(0) saturate(100%) invert(39%) sepia(57%) saturate(2018%) hue-rotate(202deg) brightness(87%) contrast(101%) !important;
}
#nav-drawer .list-group-item:hover .media-body,
#nav-drawer .list-group-item.active .media-body {
    color: #0f6cbf !important;
}
</style>
<div id="nav-drawer" data-region="drawer" class="hidden-print hidden-mobile moodle-has-zindex {{^navdraweropen}}closed{{/navdraweropen}}" aria-hidden="{{#navdraweropen}}false{{/navdraweropen}}{{^navdraweropen}}true{{/navdraweropen}}" tabindex="-1">
    <a href="{{{ config.wwwroot }}}/?redirect=0" class="navbar-brand drawer {{# logourl }}has-logo{{/ logourl }}
        {{# output.should_display_navbar_logo }}
            <img src="{{output.get_compact_logo_url}}" class="logo mr-1" alt="{{sitename}}">
        {{/ output.should_display_navbar_logo }}
        {{^ output.should_display_navbar_logo }}
            <img src="/theme/uonbi/pix/logo.png" class="logo mr-1" alt="{{sitename}}">
            <h1 class="login-heading sr-only">{{#str}} loginto, core, {{sitename}} {{/str}}</h1>
        {{/ output.should_display_navbar_logo }}
    </a>
    {{> theme_uonbi/flat_navigation }}
</div>

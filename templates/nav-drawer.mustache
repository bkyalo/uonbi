{{!
    @template theme_uonbi/nav-drawer

    Nav drawer template

    Example context (json): {}
}}
<style>
/* Navigation drawer */
#nav-drawer {
    width: 260px !important;
    padding: 15px 0 !important;
    background: #f8f9fa !important;
    border-right: 1px solid #e9ecef;
}

/* Navigation items */
#nav-drawer .list-group {
    padding: 0 10px;
}

#nav-drawer .list-group-item {
    border: none;
    border-radius: 6px !important;
    margin: 2px 0;
    padding: 8px 12px !important;
    transition: all 0.2s ease;
}

/* Icons */
#nav-drawer .media-left {
    width: 24px !important;
    min-width: 24px !important;
    text-align: center;
    margin-right: 12px !important;
    display: flex;
    align-items: center;
    justify-content: center;
}

#nav-drawer .media-left img {
    width: 18px !important;
    height: 18px !important;
    max-width: 18px !important;
    max-height: 18px !important;
    filter: brightness(0) saturate(100%) invert(48%) sepia(10%) saturate(3207%) hue-rotate(188deg) brightness(95%) contrast(80%);
    opacity: 0.9;
    transition: all 0.2s ease;
}

/* Text */
#nav-drawer .media-body {
    font-size: 0.9rem !important;
    font-weight: 500;
    color: #495057 !important;
    transition: all 0.2s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* Hover & Active states */
#nav-drawer .list-group-item:hover,
#nav-drawer .list-group-item.active {
    background-color: #e9ecef !important;
}

#nav-drawer .list-group-item:hover .media-left img,
#nav-drawer .list-group-item.active .media-left img {
    opacity: 1 !important;
    filter: brightness(0) saturate(100%) invert(39%) sepia(57%) saturate(2018%) hue-rotate(202deg) brightness(87%) contrast(101%) !important;
}

#nav-drawer .list-group-item:hover .media-body,
#nav-drawer .list-group-item.active .media-body {
    color: #0d6efd !important;
}
#nav-drawer .list-group-item:hover .media-left img,
#nav-drawer .list-group-item.active .media-left img {
    opacity: 1 !important;
    filter: brightness(0) saturate(100%) invert(39%) sepia(57%) saturate(2018%) hue-rotate(202deg) brightness(87%) contrast(101%) !important;
}
#nav-drawer .list-group-item:hover .media-body,
#nav-drawer .list-group-item.active .media-body {
    color: #0f6cbf !important;
}
</style>
<div id="nav-drawer" data-region="drawer" class="hidden-print hidden-mobile moodle-has-zindex {{^navdraweropen}}closed{{/navdraweropen}}" aria-hidden="{{#navdraweropen}}false{{/navdraweropen}}{{^navdraweropen}}true{{/navdraweropen}}" tabindex="-1">
    <a href="{{{ config.wwwroot }}}/?redirect=0" class="navbar-brand drawer {{# logourl }}has-logo{{/ logourl }}
        {{# output.should_display_navbar_logo }}
            <img src="{{output.get_compact_logo_url}}" class="logo mr-1" alt="{{sitename}}">
        {{/ output.should_display_navbar_logo }}
        {{^ output.should_display_navbar_logo }}
            <img src="/theme/uonbi/pix/logo.png" class="logo mr-1" alt="{{sitename}}">
            <h1 class="login-heading sr-only">{{#str}} loginto, core, {{sitename}} {{/str}}</h1>
        {{/ output.should_display_navbar_logo }}
    </a>
    {{> theme_uonbi/flat_navigation }}
</div>
